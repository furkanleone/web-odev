@{
    ViewData["Title"] = "Tavsiye Al";
}

<div class="container py-5">
    <!-- Başlık -->
    <h1 class="text-center mb-4 display-5 fw-bold text-primary">Saç Kesim Tavsiyesi Al</h1>
    <p class="text-center text-muted mb-4">
        En iyi saç kesimi önerileri için sorunuzu yazın.
    </p>

    <!-- Form -->
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form asp-controller="AI" asp-action="Recommend" method="post" class="bg-light p-4 rounded shadow">
                <div class="form-group mb-3">
                    <label for="userInput" class="form-label fw-bold">Sorunuzu Yazın:</label>
                    <textarea name="userInput" id="userInput" class="form-control" rows="4" placeholder="Buraya yazın..." required></textarea>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg w-100">Tavsiye Al</button>
                </div>
            </form>
        </div>
    </div>
</div>
