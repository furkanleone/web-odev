@model KuaforYonetim.Models.Appointment

<div class="container py-5">
    <!-- Başlık ve Açıklama -->
    <div class="p-4 bg-light rounded shadow-sm mb-4 text-center">
        <h1 class="display-6 fw-bold text-dark">Randevu Detayları</h1>
        <p class="text-secondary">Bu sayfada randevu bilgilerini inceleyebilirsiniz.</p>
    </div>

    <!-- Detaylar Kartı -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <!-- Ad Soyad -->
                    <p class="mb-3">
                        <strong class="text-dark">Ad Soyad:</strong>
                        <span class="text-secondary">@Model.CustomerName</span>
                    </p>
                    <!-- Hizmet -->
                    <p class="mb-3">
                        <strong class="text-dark">Hizmet:</strong>
                        <span class="text-secondary">@Model.Service</span>
                    </p>
                    <!-- Tarih -->
                    <p class="mb-3">
                        <strong class="text-dark">Tarih:</strong>
                        <span class="text-secondary">@Model.Date.ToString("dd/MM/yyyy HH:mm")</span>
                    </p>
                    <!-- Telefon -->
                    <p class="mb-3">
                        <strong class="text-dark">Telefon:</strong>
                        <span class="text-secondary">@Model.Phone</span>
                    </p>
                    <!-- Geri Dön Butonu -->
                    <div class="text-center mt-4">
                        <a href="/Appointment" class="btn btn-secondary btn-lg px-4">Geri Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
