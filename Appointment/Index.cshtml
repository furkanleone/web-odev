@model IEnumerable<KuaforYonetim.Models.Appointment>

<div class="container py-5">
    <!-- Başlık -->
    <div class="p-4 bg-light rounded shadow-sm mb-4">
        <h1 class="text-center display-6 fw-bold text-dark">Randevular</h1>
        <p class="text-center text-secondary">
            Mevcut tüm randevuları görüntüleyebilir, düzenleyebilir ve yönetebilirsiniz.
        </p>
    </div>

    <!-- Yeni Randevu ve Bekleyen Randevular -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-controller="Appointment" asp-action="Create" class="btn btn-primary">Yeni Randevu Ekle</a>
        <a asp-controller="Appointment" asp-action="Pending" class="btn btn-warning">Bekleyen Randevular</a>
    </div>

    <!-- Randevular Tablosu -->
    <div class="table-responsive shadow-sm">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Ad Soyad</th>
                    <th>Gün</th>
                    <th>Zaman Dilimi</th>
                    <th>Telefon</th>
                    <th>Çalışan</th>
                    <th>Durum</th>
                    <th class="text-center">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted">Henüz bir randevu bulunmamaktadır.</td>
                    </tr>
                }
                else
                {
                    @foreach (var appointment in Model)
                    {
                        <tr>
                            <td>@appointment.CustomerName</td>
                            <td>@appointment.Date.ToString("dddd")</td> <!-- Gün -->
                            <td>@appointment.Date.ToString("HH:mm")</td> <!-- Saat -->
                            <td>@appointment.Phone</td>
                            <td>@(appointment.Employee?.Name ?? "Çalışan Belirtilmedi")</td>
                            <td>
                                <span class="badge @GetStatusClass(appointment.Status)">
                                    @GetStatusDisplay(appointment.Status)
                                </span>
                            </td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    @if (appointment.Status == "Pending")
                                    {
                                        <a asp-controller="Appointment" asp-action="Approve" asp-route-id="@appointment.Id" class="btn btn-success btn-sm">
                                            Onayla
                                        </a>
                                        <a asp-controller="Appointment" asp-action="Reject" asp-route-id="@appointment.Id" class="btn btn-danger btn-sm">
                                            Reddet
                                        </a>
                                    }
                                    <a asp-controller="Appointment" asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-info btn-sm">
                                        Detaylar
                                    </a>
                                    <form asp-controller="Appointment" asp-action="Delete" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@appointment.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>

        </table>
    </div>
</div>

@functions {
    // Randevu durumuna uygun CSS sınıfı
    public string GetStatusClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning text-dark",
            "Approved" => "bg-success text-light",
            "Rejected" => "bg-danger text-light",
            _ => "bg-secondary text-dark"
        };
    }

    // Randevu durumunun Türkçe karşılığı
    public string GetStatusDisplay(string status)
    {
        return status switch
        {
            "Pending" => "Bekliyor",
            "Approved" => "Onaylandı",
            "Rejected" => "Reddedildi",
            _ => "Bilinmiyor"
        };
    }
}
