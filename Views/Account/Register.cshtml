<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <!-- Başlık -->
                <div class="card-header text-center p-4" style="background-color: #6c757d;">
                    <h4 class="text-white mb-0" style="font-family: 'Georgia', serif; font-size: 2.5rem;">
                        Üye Ol
                    </h4>
                </div>

                <!-- Form İçeriği -->
                <div class="card-body p-5" style="background-color: #f8f3e3;">
                    <form method="post" action="/Account/Register">
                        @Html.AntiForgeryToken()
                        <!-- Ad Soyad -->
                        <div class="form-group mb-4">
                            <label for="fullname" class="form-label" style="color: #5a4634; font-weight: 600;">Ad Soyad</label>
                            <input type="text"
                                   id="fullname"
                                   name="fullname"
                                   class="form-control rounded-pill shadow-sm"
                                   placeholder="Adınızı ve soyadınızı girin"
                                   style="font-size: 1rem;"
                                   required />
                        </div>

                        <!-- E-posta -->
                        <div class="form-group mb-4">
                            <label for="email" class="form-label" style="color: #5a4634; font-weight: 600;">E-posta</label>
                            <input type="email"
                                   id="email"
                                   name="email"
                                   class="form-control rounded-pill shadow-sm"
                                   placeholder="E-posta adresinizi girin"
                                   style="font-size: 1rem;"
                                   required />
                        </div>

                        <!-- Şifre -->
                        <div class="form-group mb-4">
                            <label for="password" class="form-label" style="color: #5a4634; font-weight: 600;">Şifre</label>
                            <input type="password"
                                   id="password"
                                   name="password"
                                   class="form-control rounded-pill shadow-sm"
                                   placeholder="Şifrenizi oluşturun"
                                   style="font-size: 1rem;"
                                   required />
                        </div>

                        <!-- Şifre Tekrar -->
                        <div class="form-group mb-4">
                            <label for="confirmPassword" class="form-label" style="color: #5a4634; font-weight: 600;">Şifre Tekrar</label>
                            <input type="password"
                                   id="confirmPassword"
                                   name="confirmPassword"
                                   class="form-control rounded-pill shadow-sm"
                                   placeholder="Şifrenizi tekrar girin"
                                   style="font-size: 1rem;"
                                   required />
                        </div>

                        <!-- Kayıt Ol Butonu -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary rounded-pill py-2 shadow-sm"
                                    style="font-family: 'Georgia', serif; font-size: 1.2rem; font-weight: 600; background-color: #5a4634; border: none;">
                                Üye Ol
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
