@{
    ViewData["Title"] = "Yönetici Paneli";
}

<div class="container py-5">
    <!-- Başlık -->
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-primary">Yönetici Paneli</h1>
        <p class="text-secondary">Sistemi yönetmek için aşağıdaki bağlantıları kullanabilirsiniz.</p>
    </div>

    <!-- Yönetici İşlemleri -->
    <div class="row g-4">
        <!-- Kullanıcı Listesi -->
        <div class="col-md-4">
            <div class="card shadow border-0">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">Kullanıcı Listesi</h5>
                    <p class="card-text text-muted">Sistemdeki kullanıcıların listesini görüntüleyin.</p>
                    <a href="/Account/UserList" class="btn btn-primary w-100">Kullanıcıları Gör</a>
                </div>
            </div>
        </div>

        <!-- Yeni Kullanıcı Ekle -->
        <div class="col-md-4">
            <div class="card shadow border-0">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">Yeni Kullanıcı Ekle</h5>
                    <p class="card-text text-muted">Sisteme yeni bir kullanıcı ekleyin.</p>
                    <a href="/Account/Register" class="btn btn-success w-100">Kullanıcı Ekle</a>
                </div>
            </div>
        </div>

        <!-- Randevular -->
        <div class="col-md-4">
            <div class="card shadow border-0">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">Randevular</h5>
                    <p class="card-text text-muted">Tüm randevuları yönetin.</p>
                    <a href="/Appointment/Index" class="btn btn-warning w-100">Randevuları Gör</a>
                </div>
            </div>
        </div>

        <!-- Çıkış -->
        <div class="col-md-4">
            <div class="card shadow border-0">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">Çıkış Yap</h5>
                    <p class="card-text text-muted">Yönetici oturumunu kapatmak için çıkış yapın.</p>
                    <a href="/Account/LogoutAdmin" class="btn btn-danger w-100">Çıkış Yap</a>
                </div>
            </div>
        </div>
    </div>
</div>
